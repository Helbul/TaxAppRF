<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactions_adapter_item"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/offset_8"
    android:layout_marginTop="@dimen/offset_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/offset_8">

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_tax_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbol_rub"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_transactions_adapter_item_rate_cbr"
            app:layout_constraintEnd_toEndOf="@+id/text_view_transactions_adapter_item_date" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_tax_symbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/symbol_rub"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_transactions_adapter_item_tax"
            app:layout_constraintStart_toEndOf="@+id/text_view_transactions_adapter_item_tax" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintEnd_toStartOf="@+id/button_transactions_adapter_item_more"
            app:layout_constraintTop_toTopOf="@+id/button_transactions_adapter_item_more"
            tools:text="DD/MM/YYYY" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_name"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_transactions_adapter_item_tax"
            tools:text="name" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintStart_toStartOf="@+id/text_view_transactions_adapter_item_currency"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="type" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toEndOf="@+id/text_view_transactions_adapter_item_currency"
            app:layout_constraintTop_toTopOf="@+id/text_view_transactions_adapter_item_currency"
            tools:text="1000.00" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_transactions_adapter_item_type"
            tools:text="USD" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_rate_cbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/offset_4"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintEnd_toStartOf="@+id/text_view_transactions_adapter_item_tax_symbol"
            app:layout_constraintTop_toBottomOf="@+id/text_view_transactions_adapter_item_date"
            tools:text="95.44" />

        <TextView
            android:id="@+id/text_view_transactions_adapter_item_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toStartOf="@+id/text_view_transactions_adapter_item_sum"
            app:layout_constraintTop_toBottomOf="@+id/text_view_transactions_adapter_item_sum"
            tools:text="1000.34" />

        <Button
            android:id="@+id/button_transactions_adapter_item_more"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_more_horiz_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>