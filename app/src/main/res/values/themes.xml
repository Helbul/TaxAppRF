<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/Widget.MyApp.SnackbarStyle</item>


    </style>


    <style name="Widget.MyApp.SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">#2B422C</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TaxApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaxApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaxApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyleButtonTaxApp" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleButtonOK" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_primary_variant</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtonCancel" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_secondary_variant</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StyleButtonRegister" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_button_sign_up</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StyleLogoText" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/logo_margin_top</item>
        <item name="android:fontFamily">@font/suez_one</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/logo_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>