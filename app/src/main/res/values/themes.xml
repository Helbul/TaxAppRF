<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">#5A8A5C</item>
        <item name="colorPrimaryDark">#476C48</item>
        <item name="colorPrimaryVariant">#81C784</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TaxApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaxApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaxApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyleButtonOK" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_ok</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="StyleButtonCancel" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textAllCaps">true</item>

    </style>

</resources>