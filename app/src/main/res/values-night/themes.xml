<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_night</item>
        <item name="colorOnPrimary">@color/color_on_primary_night</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_night</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_night</item>
        <item name="colorOnSecondary">@color/color_on_secondary_night</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="StyleButtonOK" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_primary_variant_night</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StyleButtonCancel" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_secondary_variant_night</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StyleButtonRegister" parent="@style/StyleButtonTaxApp">
        <item name="android:backgroundTint">@color/color_button_sign_up_night</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>